{
  "name": "uploader",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "eslint . --fix",
    "prettify": "prettier . --write",
    "prepare": "cd .. && husky install client/.husky",
    "clean": "tsc --build --clean",
    "build": "npx tsc -p tsconfig.json",
    "watch": "tsc --watch --module es2022 --outDir esm/",
    "dev": "node --trace-warnings --loader ts-node/esm src/main.ts",
    "create-migration": "atlas migrate diff --env local --to file://schema.sql",
    "apply-migration": "atlas migrate apply --env local",
    "run-script": "node --trace-warnings --loader ts-node/esm"
  },
  "dependencies": {
    "@asteroid-protocol/sdk": "^0.9.7",
    "@aws-sdk/client-s3": "^3.614.0",
    "@aws-sdk/s3-request-presigner": "^3.616.0",
    "@keplr-wallet/cosmos": "^0.12.121",
    "api-error-handler": "^1.0.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "cuid": "^3.0.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-handler": "^1.2.0",
    "knex": "^3.1.0",
    "pg": "^8.12.0",
    "sharp": "^0.33.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/api-error-handler": "^1.0.36",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.11",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-require-extensions": "^0.1.3",
    "husky": "^9.1.1",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write --ignore-unknown",
      "eslint"
    ]
  }
}
